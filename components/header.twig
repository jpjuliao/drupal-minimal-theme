{#
/**
 * @file
 * Template for the header component.
 *
 * Available variables:
 * - site_name: The name of the site.
 * - logged_in: A flag indicating whether the user is logged in.
 * - user_display_name: The display name of the logged-in user.
 */
#}
<header class="bg-gray-800 text-white py-4">
  <div class="container mx-auto">
    <h1 class="text-2xl font-bold">{{ site_name }}</h1>
    {% if logged_in %}
      <p>Welcome, {{ user_display_name }}!</p>
    {% else %}
      <p>Welcome, guest!</p>
    {% endif %}
    {# Add any additional header content here #}
  </div>
</header>
